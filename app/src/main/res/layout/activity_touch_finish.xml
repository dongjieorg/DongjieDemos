<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/normal_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="普通的Activity"
            android:onClick="onButtonClick1"
            />

        <Button
            android:id="@+id/absListview_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="有AbsListView的Activity"
            android:onClick="onButtonClick2"
            />

        <Button
            android:id="@+id/scrollview_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="有ScrollView的Activity"
            android:onClick="onButtonClick3"
            />

        <Button
            android:id="@+id/recyclerview_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="有RecyclerView的Activity"
            android:onClick="onButtonClick4"
            />

        <Button
            android:id="@+id/viewpager_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="有ViewPager的Activity"
            android:onClick="onButtonClick5"
            />

    </LinearLayout>

</RelativeLayout>