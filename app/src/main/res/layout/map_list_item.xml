<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/rel_item"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d5d7dc"
        android:layout_alignParentBottom="true"
        />
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="13dp"
        android:layout_height="17dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/map_list_selector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/iv_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/map_list_text_address_selector"
            android:textSize="16dp"
            android:text="新加坡科技园"
            />

        <TextView
            android:id="@+id/tv_addrdss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:maxLines="1"
            android:textColor="@color/map_list_text_selector"
            android:textSize="14dp"
            android:text="6号大街19号新加坡科技园3号楼"
            android:ellipsize="end"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_choise"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@mipmap/choice_icon"
        android:visibility="gone"
        />

</RelativeLayout>